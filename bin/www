#!/usr/bin/env node

/**
 * Module dependencies.
 */

require('dotenv').config()
var app = require('../app');
var debug = require('debug')('repeater');
var http = require('http');
const axios = require('axios');
var socketIO = require('socket.io');
const js_helper = require('../helpers/js');
const fs = require('fs')

let verbose = Boolean(process.env.VERBOSE);

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3003');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

const refresh_images = async function() {
  if (verbose == true) console.log('Refreshing images...');
  
  /* /price.gif */
  await require('../image_scripts/price.js').create(process.env.APP_DIR + './public/price.gif');

  if (verbose == true) console.log('Done refreshing images...');
}
refresh_images();
setInterval(refresh_images, process.env.PERIODIC_MINUTES*60*1000);




/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
